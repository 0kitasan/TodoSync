<Window x:Class="TodoSynchronizer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoSynchronizer"
        xmlns:ext="clr-namespace:TodoSynchronizer.Extensions" 
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding Message}" FontSize="16" TextWrapping="Wrap" HorizontalAlignment="Center"/>
        <ui:Button Margin="10" Height="40" Width="200" Appearance="Primary" Content="4444" Click="Button_Click"/>
        <ui:Button Margin="10" Height="40" Width="200" Appearance="Primary" Content="Test" Click="ButtonTest_Click"/>
    </StackPanel>
</Window>
